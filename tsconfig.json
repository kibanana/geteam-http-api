{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"lib": [
			"dom",
			"es5",
			"scripthost",
			"es2015.promise"
		],
		"baseUrl": "./",
		"outDir": "dist",
		"strict": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"paths": {
			"@common/*": [
				"src/common/*"
			],
			"@controllers/*": [
				"src/controllers/*"
			],
			"@mails/*": [
				"src/mails/*"
			],
			"@middlewares/*": [
				"src/middlewares/*"
			],
			"@models/*": [
				"src/models/*"
			],
			"@routes/*": [
				"src/routes/*"
			]
		}
	},
	"exclude": [
		"node_modules",
		"dist"
	]
}